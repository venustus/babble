<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>tts</servlet-name>
        <servlet-class>org.venustus.voiceassistant.web.TTSServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>article</servlet-name>
        <servlet-class>org.venustus.voiceassistant.web.ArticleUttererServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tts</servlet-name>
        <url-pattern>/tts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>

</web-app>
